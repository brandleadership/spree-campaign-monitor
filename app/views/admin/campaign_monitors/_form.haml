- locals = {:f => f}
- hook :admin_campaign_monitor_form_fields, locals do
  - CampaignMonitor.form_fields.each do |attr|
    - f.field_container attr do
      = f.label attr, t("campaign_monitor.#{attr.to_s}")
      %br
      - case attr
      - when :active
        = f.check_box attr
      - else
        = f.text_field attr

